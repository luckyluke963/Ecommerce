@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Danh sách quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>

}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh Sách quyền</h3>

            <div class="card-tools">
                <a href="/admin/role/create" class="btn btn-success float"><i class="fa fa-plus"></i> Thêm mới</a>
               

            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>

                        <th>Id</th>
                        <th>Tên</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>

                                <td>@i</td>
                                <td>@item.Name</td>

                                <td>
                                    <a href="/admin/role/edit/@item.Id" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i>  Sửa</a>
                                    
                                    <a href="#" data-id="@item.Id" class="btn btn-danger btn-sm btnDelete"><i class="fas fa-trash"></i>  Xóa</a>

                                </td>
                            </tr>
                            i++;
                        }

                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts{
    <script>

        $(document).ready(function () {

            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                Swal.fire({
                    title: 'Bạn có muốn xóa bản ghi này không?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Có, Hãy xóa nó',
                    cancelButtonText: 'Hủy!',
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/Role/Delete',
                            type: 'POST',
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success) {
                                    $('#trow_' + id).remove();
                                    Swal.fire(
                                        'Xóa!',
                                        'Bạn đã xóa file thành công.',
                                        'thành công'
                                    );

                                }
                                location.reload();
                            }
                        });
                    }
                });

            });


            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");


                $.ajax({
                    url: '/Admin/News/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("Hiện thị <i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("Tắt <i class='fa fa-times text-danger'></i>");
                            }
                        }


                    }
                });


            });

            //su kien check het
            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    }
                    else {
                        checkbox.attr('selected', '');
                    }
                });
            });
            //su kien xoa het
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        }
                        else {
                            str += "," + _id;
                        }
                        i++;
                    }
                    else {
                        checkbox.attr('selected', '');
                    }
                });
                if (str.length > 0) {
                    Swal.fire({
                        title: 'Bạn có muốn xóa các bản ghi này không?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Có, xóa chúng',
                        cancelButtonText: 'Không, Hủy!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '/Admin/News/DeleteAll',
                                type: 'POST',
                                data: { ids: str },
                                success: function (rs) {
                                    if (rs.success) {
                                        location.reload();
                                    }
                                }
                            });
                        }
                    });
                }
            });
        })
    </script>
}


