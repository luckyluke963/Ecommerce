@model Models.EF.Subscribe
<div class="axil-newsletter-area axil-section-gap pt--0">
    <div class="container">
        <div class="etrade-newsletter-wrapper bg_image bg_image--12">
            <div class="newsletter-content">
                <span class="title-highlighter highlighter-primary2"><i class="fas fa-envelope-open"></i>@StaticRescouces.ResourceUser.DangKy</span>
                <h2 class="title mb--40 mb_sm--30">@StaticRescouces.ResourceUser.DangKyNhanMaGiamGia</h2>
                <div class="input-group newsletter-form">
                    @using (Ajax.BeginForm("Subcrice", "Home", new AjaxOptions
                    {
                        OnBegin = "OnBeginSub",
                        OnSuccess = "OnSuccessSub",
                        OnFailure = "OnFailureSub",
                    }))
                    {
                        @Html.AntiForgeryToken()
                        <!-- Add this in the head of your HTML file -->
                        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

                        <script>
                            function OnBeginSub() {

                            }
                            function OnSuccessSub(rs) {
                                if (rs.Success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Đăng ký thành công', // You can customize this message
                                        showConfirmButton: false,
                                        timer: 1500
                                    });
                                    $('input[name="Email"]').val('');
                                } else if (rs.Sai !== undefined && rs.Sai === false) {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Xin lỗi email đã được sử dụng', // You can customize this message
                                        showConfirmButton: false,
                                        timer: 1500
                                    });
                                   
                                }
                                else if (rs.Rong !== undefined && rs.Rong === false) {
                                    Swal.fire({
                                        icon: 'warning',
                                        title: 'Bạn cần điền email để nhận mã giảm giá',
                                        showConfirmButton: false,
                                        timer: 1500
                                    });
                                }
                            }

                        </script>
                        <div class="position-relative newsletter-inner mb--15">
                            <input name="Email" placeholder="example@gmail.com" type="text">
                        </div>
                        <button type="submit" class="axil-btn mb--15">@StaticRescouces.ResourceUser.DangKy</button>
                    }

                </div>
            </div>
        </div>
    </div>
    <!-- End .container -->
</div>
