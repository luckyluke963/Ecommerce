@model IEnumerable<Models.EF.Order>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Mã Oder</th>
                <th scope="col">Ngày mua</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Tổng sản phẩm</th>
                <th scope="col">Xem chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Code</th>
                    <td>@item.CreateDate</td>
                    <td>
                        @if (item.Status != 1)
                        {
                            <span style="color: green;">Đã giao</span>
                        }
                        else
                        {
                            <span style="color: red;">Chưa giao</span>
                        }
                    </td>
                    <td>@item.TypePayment for @item.Quantity items</td>
                    @*<td><a href="#" class="axil-btn view-btn" data-toggle="modal" data-target=".bd-example-modal-lg">Xem chi tiết</a></td>*@
                </tr>
            }


        </tbody>
    </table>


}




