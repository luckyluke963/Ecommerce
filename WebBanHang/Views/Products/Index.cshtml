                                                    </a>
                                                </div>
                                            </div>
                                        }

                                        <div class="page_current">
                                            <span>@Model.PageNumber</span>
                                            <ul class="page_selection">
                                                @for (int i = 1; i <= Model.PageCount; i++)
                                                {
                                                    <li class="@(i == Model.PageNumber ? "active" : "")">
                                                        <a href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>

                                        <div class="page_total"><span>of</span> @Model.PageCount</div>

                                        @if (Model.HasNextPage)
                                        {
                                            <div id="next_page" class="page_next">
                                                <a href="@Url.Action("Index", new { page = Model.PageNumber + 1, pageSize = ViewBag.PageSize })">
                                                    <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                        }
                                    </div>





                                </div>

                                <!-- Product Grid -->

                                <div class="product-grid">

                                    <!-- Product 1 -->
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            var strImage = "";
                                            var img = item.ProductImage.FirstOrDefault(x => x.IsDefaul);
                                            var imgGoc = item.Image;
                                            var imgfalse = item.ProductImage.FirstOrDefault(x => x.IsDefaul == false);



                                            if (img != null)
                                            {

                                                strImage = img.image;
                                            }
                                            else if (imgGoc != null || imgfalse != null)
                                            {
                                                strImage = imgGoc;
                                            }

                                            var wishlist = item.Wishlists.FirstOrDefault(x => x.UserName == User.Identity.Name);
                                            var isWishlist = false;
                                            if (wishlist != null)
                                            {
                                                isWishlist = true;
                                            }

                                            <div class="product-item @item.ProductCategory.Alias">
                                                <div class="product discount product_filter">
                                                    <div class="product_image">
                                                        <a href="/chi-tiet/@item.Alias-p@(item.Id)">

                                                            <img src="@strImage" alt="@item.Title">
                                                        </a>
                                                    </div>
                                                    @if (isWishlist == true)
                                                    {
                                                        <div data-id="@item.Id" class="favorite favorite_left active"></div>
                                                    }
                                                    else
                                                    {
                                                        <div data-id="@item.Id" class="favorite favorite_left"></div>
                                                    }
                                                    @if (item.Price != 0)
                                                    {
                                                        if (item.PriceSale > 0)
                                                        {
                                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                                                <span>@(Math.Round((double)((item.Price - item.PriceSale) / item.Price * 100), 0))% @StaticRescouces.ResourceUser.Giam</span>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                                                <span>N/A</span> <!-- Handle the case where item.PriceSale is not greater than 0 -->
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                                            <span>N/A</span> <!-- Handle the case where item.Price is zero -->
                                                        </div>
                                                    }



