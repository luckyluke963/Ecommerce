                                                        <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                                                        @if ((currentLanguage == "vi"))
                                                        {
                                                            if (item.PriceSale > 0)
                                                            {
                                                                <div class="product_price">@Models.Common.Common.FormatNumber(item.PriceSale, 0) @Html.Raw(StaticRescouces.ResourceUser.Tien)<span>@Models.Common.Common.FormatNumber(item.Price, 0) @Html.Raw(StaticRescouces.ResourceUser.Tien)</span></div>

                                                                <div style="display:none;" class="in_product_price"> @item.PriceSale</div>
                                                            }
                                                            else
                                                            {
                                                                <div class="product_price">@Models.Common.Common.FormatNumber(item.Price, 0) @Html.Raw(StaticRescouces.ResourceUser.Tien)</div>
                                                                <div style="display:none;" class="in_product_price"> @item.Price</div>
                                                            }
                                                        }
                                                        else
